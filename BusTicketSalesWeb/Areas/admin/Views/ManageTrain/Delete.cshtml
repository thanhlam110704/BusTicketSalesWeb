@model BusTicketSalesWeb.Models.ChuyenXe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"> Xóa chuyến xe</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a >Xóa chuyến xe</a></li>
                    <li class="breadcrumb-item active">Xóa chuyến xe</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="card card-danger" id="main-card">
            <div class="card-header">
                <h3 class="card-title">Thông tin chuyến xe</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <div class="form-group">
                <div class="card-body">
                    <div class="row form-group">
                        <div class="col-6">
                            <label>Mã chuyến:&nbsp;&nbsp;</label>
                            @Html.DisplayFor(model => model.MaChuyen)
                        </div>
                        <div class="col-6">
                            <label>Tên chuyến:&nbsp;&nbsp;</label>
                            @Html.DisplayFor(model => model.TenChuyen)
                        </div>
                        <div class="col-6">
                            <label>Ngày khởi hành:&nbsp;&nbsp;</label>
                            @Html.DisplayFor(model => model.NgayGioKhoiHanh)
                        </div>
                        <div class="col-6">
                            <label>Mã tuyến:&nbsp;&nbsp;</label>
                            @Html.DisplayFor(model => model.MaTuyen)
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-header">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }

    </div>
</section>
<!-- /.content -->

@section Scripts {
    <script>
$(document).ready(function () {
            var mainHeight = $('#main-card').height();
            var subHeight = $('#sub-card').height();
            var imgHeight = $('#img-preview').height();
            $('#img-preview').height(imgHeight - subHeight + mainHeight);
        });</script>
}

