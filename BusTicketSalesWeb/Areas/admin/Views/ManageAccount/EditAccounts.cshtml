@model BusTicketSalesWeb.Models.TaiKhoan
<link rel="stylesheet" href="~/Content/css/info.css" />
@{
    ViewBag.Title = "EditAccounts";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Tài khoản</li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </div>
        </div>
    </div>
</section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="main-box title-i">
                <h3 style="margin-bottom:30px;font-weight:500">Chỉnh sửa</h3>
                <div class="main-box-1">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ant-input" , @readonly = "readonly", @style = "cursor:not-allowed" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MatKhau,"Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control ant-input" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.VaiTro, "Vai trò",htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.VaiTro, new { htmlAttributes = new { @class = "form-control ant-input" } })
                            @Html.ValidationMessageFor(model => model.VaiTro, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Sdt, "Số điện thoại",htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Sdt, new { htmlAttributes = new { @class = "form-control ant-input" } })
                            @Html.ValidationMessageFor(model => model.Sdt, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12" style="text-align:center">
                            <input style="font-weight:500;width:180px;height:45px;margin-top:15px;border-radius:15px" type="submit" value="Save" class="btn btn-warning btn-sm" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
