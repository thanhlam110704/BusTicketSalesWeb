@model BusTicketSalesWeb.Models.TuyenXe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Tuyến xe</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="#">Xóa tuyến</a></li>
                    <li class="breadcrumb-item active">Xoá tuyến</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title">Thông tin tuyến </h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="form-group">
            <div class="card-body">
                <div class="form-group"style="padding:10px">
                    <label>Tên tuyến:&nbsp;&nbsp;</label>
                    @Html.DisplayFor(model => model.TenTuyen)
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <div class="content-header">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            }
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a href="@Url.Action("Index", "ManageTrainRoute")">
                    <button type="button" class="btn btn-outline-dark">Quay về</button>
                </a>
            </div>
        }

    </div>

</section>