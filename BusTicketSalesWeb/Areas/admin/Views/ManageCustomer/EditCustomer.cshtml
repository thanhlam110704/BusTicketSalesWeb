@model BusTicketSalesWeb.Models.KhachHang
<link rel="stylesheet" href="~/Content/css/info.css" />
@{
    ViewBag.Title = "EditCustomer";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Khách hàng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/">Trang Chủ</a></li>
                        <li class="breadcrumb-item active">Khách hàng</li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <div class="form-horizontal">
        <div class="main-box title-i">
            <hr />
            <div class="main-box-1">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaKH)
                <div class="form-group">
                    @Html.LabelFor(model => model.TenKH, "Tên khách hàng", htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control ant-input" } })
                        @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Gioi_Tinh, "Giới tính", htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                    <div class="col-md-12">
                        @Html.DropDownList("Gioi_Tinh", null, htmlAttributes: new { @class = "form-control ant-input" })
                        @Html.ValidationMessageFor(model => model.Gioi_Tinh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Ngay_Sinh, "Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Ngay_Sinh, "{0:yyyy-MM-dd}", new { @class = "form-control ant-input", @type = "date" })
                        @Html.ValidationMessageFor(model => model.Ngay_Sinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Id, "ID_Account", htmlAttributes: new { @class = "control-label col-md-2 title-input" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control ant-input", @readonly = "readonly", @style = "cursor:not-allowed" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12" style="text-align:center">
                        <input style="font-weight:500;width:180px;height:45px;margin-top:15px;border-radius:15px" type="submit" value="Lưu thông tin" class="btn btn-warning btn-sm" />
                    </div>
                </div>
            </div>
        </div>
    </div>


}
