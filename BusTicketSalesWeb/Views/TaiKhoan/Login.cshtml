@model BusTicketSalesWeb.Models.TaiKhoan
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Login/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Content/css/login.css">
    <link href="~/Content/css/grid.css" rel="stylesheet" />
</head>

<style>
    a {
        color: #222;
        font-size: 16px;
    }
    .messenge_email {
        font-size: 16px;
        margin-bottom: 15px;
    }
</style>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.RegistrationSuccessMessage))
    {
        <div class="alert alert-success">
            @ViewBag.RegistrationSuccessMessage
        </div>
    }
    <div class="main">
        <!-- Sign in  Form -->
        <section class="sign-in">
            <div class="container" id="signform">
                <div class="signin-content">
                    <div class="signin-image" id="messenge_email">
                        <figure><img src="~/Content/public/banner2.jpeg" alt="sing up image"></figure>
                    </div>
                   
                    <div class="signin-form">
                        <h2 class="form-title">Đăng nhập </h2>
                        <p class="login-box-msg">
                            @if (TempData["Message"] != null)
                            {
                            <p class="@TempData["css"] text-center" id="notification">@TempData["Message"]</p>
                        }</p>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <label for="email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Nhập email của bạn" })
                                </div>

                                <div class="form-group">
                                    <label for="password"><i class="zmdi zmdi-lock"></i></label>
                                    @Html.PasswordFor(model => model.MatKhau, new { placeholder = "Nhập mật khẩu của bạn ", maxlength = "25" })
                                </div>
                                <p class="mb-1">
                                    <a class="text-center" href="~/TaiKhoan/Register">Bạn chưa có tài khoản? Đăng ký ngay!</a>
                                </p>
                                <p class="mb-1">
                                    <a href="@Url.Action("ForgotPassword", "TaiKhoan")">Quên mật khẩu</a>
                                </p>
                                <div class="form-group form-button">
                                    <input type="submit" name="signin" id="signin" class="form-submit" value="Đăng nhập" />
                                </div>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            }
                        </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    <script src="~/Areas/admin/wwwroot/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Areas/admin/wwwroot/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/admin/wwwroot/dist/js/adminlte.min.js"></script>
    <script>
        setTimeout(function () {
            document.getElementById('notification').style.display = 'none';
        }, 3000);
    </script>
    <script src="~/Login/vendor/jquery/jquery.min.js"></script>
    <script src="~/Login/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bcrypt.js/2.4.3/bcrypt.min.js"></script>
</body>


