
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>BusTicketSales &mdash; Project</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,700|Crimson+Text:400,400i" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/wwwroot/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/wwwroot/css/style.css">
</head>
<style>
    .display-3 {
        font-family: 'Roboto', sans-serif; 
        font-weight: 400; 
    }
    .btn-md {
        font-family: 'Roboto', sans-serif;
        background: #ffc107;
        border-color:black;
        

    }
        .btn-md:hover {
            background-color: #ffff !important; 
            color: #ffc107 !important; 
            border-color: #ffc107 !important; 
        }
        .btn-md:active {
            background-color: #ffff !important;
            border-color: #ffc107 !important;
            color: #ffc107 !important;
        }
        .btn-md:focus {
            background-color: #ffff !important; 
            color: #ffc107 !important;
            border-color: #ffc107 !important; 
            box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.2); 
        }

    .text-success {
        color: green; 
    }

    .text-danger {
        color: red; 
    }
</style>
<body>
    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="display-3 @((ViewBag.Success) ? "text-success" : "text-danger")">@ViewBag.Message </h2>
                    <p class="lead mb-5"></p>
                    @if (ViewBag.Success)
                    {
                        <p><a href="~/TaiKhoan/Login" class="btn btn-md height-auto px-4 py-3 btn-primary">Đăng nhập ngay</a></p>
                    }
                    else
                    {
                        <p><a href="~/TaiKhoan/Register" class="btn btn-md height-auto px-4 py-3 btn-primary">Thử lại</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

</html>
